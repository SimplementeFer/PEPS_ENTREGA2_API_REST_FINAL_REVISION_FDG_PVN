version: "3.9"

services:
  api:
    container_name: proyecto_python-api5  # ðŸ‘ˆ Nombre fijo del contenedor API
    build:
      context: ./api
      dockerfile: Dockerfile
    ports:
      - "5000:5000"
    environment:
      - DB_HOST=db
      - DB_USER=root
      - DB_PASSWORD=example
      - DB_NAME=reviews_db
      - DB_PORT=3306
      - PYTHONBUFFERED=1
    volumes:
      - ./api:/app
    depends_on:
      - db
    networks:
      - my_network

  db:
    container_name: proyecto_python-db5  # Nombre fijo del contenedor DB
    image: mariadb:10.5
    ports:
      - "7105:7105"
    environment:
      MYSQL_ROOT_PASSWORD: example
      MYSQL_DATABASE: reviews_db
    volumes:
      - db_data:/var/lib/mysql
      - ./api/models/schemas.sql:/docker-entrypoint-initdb.d/schemas.sql:ro
    networks:
      - my_network

  web:
    container_name: proyecto_python-web  # Nombre fijo del contenedor WEB
    build:
      context: ./client
      dockerfile: Dockerfile
    ports:
      - "7777:80"
    volumes:
      - ./client:/usr/local/apache2/htdocs
    depends_on:
      - api
    networks:
      - my_network

  phpmyadmin:
    container_name: proyecto_python-phpmyadmin  # Nombre fijo para phpMyAdmin
    image: phpmyadmin
    restart: always
    environment:
      - PMA_HOST=db
    ports:
      - "9093:80"
    depends_on:
      - db
    networks:
      - my_network

volumes:
  db_data:

networks:
  my_network:
    driver: bridge
